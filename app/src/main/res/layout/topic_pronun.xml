<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_100">

    <LinearLayout
        android:id="@+id/frame_pornun"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/background_login"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@drawable/icon_pronun" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Bạn đã phát âm được"
            android:textColor="@color/black_100"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sotuphatam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="0 từ"
            android:textColor="@color/teal_200"
            android:textSize="35dp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/tieptuchoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/frame_pornun"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-26dp"
        android:background="@drawable/button_login"
        android:drawableEnd="@drawable/mic_white"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Tiếp tục học từ"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tieptuchoc"
        android:layout_marginTop="80dp"
        android:orientation="horizontal"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:gravity="center">
    <LinearLayout
        android:id="@+id/frame_thap"
        android:layout_width="110dp"
        android:layout_height="150dp"
        android:background="@drawable/background_login"
        android:backgroundTint="@color/red_50"
        android:orientation="vertical">
        <Button
            android:id="@+id/thap"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="@drawable/button_pronun"
            android:backgroundTint="@color/red_100"
            android:layout_margin="10dp"
            android:text="0 từ"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nên cải thiện"
            android:textColor="@color/red_100"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1% - 49%"
            android:textSize="15dp"
            android:textColor="@color/red_100"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/frame_trungbinh"
        android:layout_width="110dp"
        android:layout_height="150dp"
        android:background="@drawable/background_login"
        android:backgroundTint="@color/yellow_50"
        android:layout_marginStart="15dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/trungbinh"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="@drawable/button_pronun"
            android:backgroundTint="@color/orange"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:text="0 từ"
            android:textColor="@color/white"
            android:textAllCaps="false"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khá ổn"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50% - 74%"
            android:textSize="15dp"
            android:textColor="@color/orange"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="150dp"
        android:background="@drawable/background_login"
        android:backgroundTint="@color/green_50"
        android:layout_marginStart="15dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/xuatsac"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="@drawable/button_pronun"
            android:backgroundTint="@color/green"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:text="0 từ"
            android:textColor="@color/white"
            android:textAllCaps="false"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xuất sắc"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="75% - 100%"
            android:textSize="15dp"
            android:textColor="@color/green"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>