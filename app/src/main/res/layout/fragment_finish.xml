<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/close_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/close" />
    <ImageView
        android:id="@+id/image_finish"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/close_finish"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_finish"/>
    <TextView
        android:id="@+id/textView_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Đã hoàn thành"
        android:textStyle="bold"
        android:layout_below="@+id/image_finish"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/textView_finish1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_finish"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:text="Chúc mừng bạn vừa hoàn thành thêm được 0 từ mới"
        android:textSize="15dp"/>

    <Button
        android:id="@+id/button_finish"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/button_login"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="Tiếp tục ôn tập"
        android:textSize="12dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_finish"
        android:layout_below="@+id/textView_finish1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_finish"
        android:layout_marginTop="15dp" />
</RelativeLayout>